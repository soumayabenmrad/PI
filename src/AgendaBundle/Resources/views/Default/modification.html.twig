{% extends '@Agenda/Default/index.html.twig' %}
{% block content %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
<ul>
<h3> Modification du program :  {{ pr.titre }}</h3>
    {{ form_start(form) }}
    <div class="form-group">
       <h3> {{ form_label(form.titre) }}</h3>
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    </div>
        <div class="form-group">
        <h3> {{ form_label(form.description) }}</h3>
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        <h3> {{ form_label(form.lieu) }}</h3>
        {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        <h3> {{ form_label(form.date) }}</h3>
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Enregistrer"/>
    </div>
    {{ form_end(form) }}

</ul>
{% endblock %}