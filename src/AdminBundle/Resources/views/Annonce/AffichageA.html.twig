{% extends 'base2.html.twig' %}
{% block content %}
<div id="content-wrapper">

    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Liste des annonces</div>
            <br>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                        <tr>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Etat</th>
                            <th>Date Debut</th>
                            <th>Date Fin</th>
                            <th>lieu</th>
                            <th>Sous Categorie</th>
                        </tr>
                        {% for i in v %}
                         <tr>

                             <th>{{ i.Titre }}</th>
                             <th>{{ i.Description }}</th>
                             <th>{{ i.Etat }}</th>
                             <th>{{ i.dateDebut |date }}</th>
                             <th>{{i.dateFin  |date  }}</th>
                             <th>{{i.lieu }}</th>
                             <th>{{i.sousCategorie.Titre }}</th>
                             <td><a href="{{  path('delete_annonce',{'id':i.id}) }}" class="fa fa-trash"></a></td>

                         </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
    {% endblock content %}
